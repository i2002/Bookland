<!DOCTYPE html>
<html lang="ro">
<head>
    <title>Bookland | Produse</title>
    <meta name="keywords" content="bookland, cărți digitale, ebook, bibliotecă virtuală, produse">
    <meta name="description" content="Magazin online de cărți digitale. Oferte. Bestsellere. Cărți nou apărute.">

    <%- include("../fragmente/head") %>     
    <link rel="stylesheet" href="/resurse/css/produse.css" type="text/css" />
    <script type="text/javascript" src=/resurse/js/produse.js></script>
</head>
<body>
    <!-- Header -->
    <%- include("../fragmente/header") %>

    <!-- Main content -->
    <main>
        <h1 style="margin-top: 2rem">Produse</h1>
        
        <!-- Product filtering -->
        <section>
            <label>Titlu: <input type="text" id="inp-titlu"></label>
            <!--<label> Maxim calorii: <input type="number" id="inp-calorii" value="10000"></label>-->
            <datalist id="optiuni-autori">
                <% for (let autor of locals.autori) { %>
                    <option value="<%- autor.autor %>">
                <% } %>
            </datalist>
            <label>Autor: <input type="text" id="inp-autor" list="optiuni-autori"></label>
            <br>
            <label for="i_textarea">Descriere:</label>
            <br>
            <textarea name="i_textarea" id="inp-descriere" cols="60" rows="4"></textarea>
            <div>Produse la ofertă:<!-- trebuie sa aiba acelasi name ca sa formeze un grup -->
                <p><label>Da
                    <input id="i_rad1" name="gr_rad" value="1" type="radio"/>
                </label></p>
                <p><label>Nu
                    <input id="i_rad2"  name="gr_rad" value="0" type="radio"/>
                </label></p>
                <p><label>Toate
                    <input id="i_rad3" name="gr_rad" value="toate" type="radio" checked/>
                </label></p>
            </div>
            <div>
                Formate:
                <label>
                    Bookland 
                    <input id="i_chk1" name="gr_chk" value="bookland" type="checkbox"/>
                </label>,
                <label>
                    pdf 
                    <input id="i_chk2" name="gr_chk" value="pdf" type="checkbox"/>
                </label>,
                <label>
                    epub 
                    <input id="i_chk3" name="gr_chk" value="epub" type="checkbox"/>
                </label>,
                <label>
                    mobi 
                    <input id="i_chk4" name="gr_chk" value="mobi" type="checkbox"/>
                </label>,
                <label>
                    mp3 
                    <input id="i_chk5" name="gr_chk" value="mp3" type="checkbox"/>
                </label>
            </div>

            <label>Număr minim de pagini: <input type="range" id="inp-pagini" step="10" value="100" min="100" max="400"> <span id="infoRange">(100)</span></label>
            <label>Colecție:
                <select id="inp-colectie">
                    <option id="sel-toate" value="toate" selected>toate</option>
                    <% for (let opt of locals.optiuni) { %>
                        <option value="<%- opt.unnest %>"><%- opt.unnest %></option>
                    <% } %>
                </select>
            </label>

            <label>Limba:
                <select id="inp-limba" multiple>
                    <option id="romana" value="română">Română</option>
                    <option id="engleza" value="engleză">Engleză</option>
                </select>
            </label>

            <p>
                <button id="filtrare">Filtreaza</button> 
                <button id="resetare">Reseteaza</button>
                <br/>
                <button id="sortCresc">Sortează crescător după raportul pagini / preț și colecție</button>
                <button id="sortDescresc">Sortează descrescător după raportul pagini / preț și colecție</button>            
                <br/>
                <button id="calcul">Calculează media prețurilor</button>
            </p>
            
        </section>

        <!-- Product listing -->
        <section id="produse">
            <h2>Produse</h2>
            <div class="grid-produse">
                <% for (let prod of locals.produse) { %>
                    <% 
                        function formatareData(data) {
                            let d = new Date(data);

                            let zi = d.getDate();
                            let luna = new Intl.DateTimeFormat("ro-RO", {month: "long"}).format(d);
                            luna = luna[0].toUpperCase() + luna.slice(1);
                            let an = d.getFullYear();
                            let zi_sapt = new Intl.DateTimeFormat("ro-RO", {weekday: "long"}).format(d);
                            zi_sapt = zi_sapt[0].toUpperCase() + zi_sapt.slice(1);

                            return `${zi} ${luna} ${an} (${zi_sapt})`;
                        }

                        function normalizareNumeColectie(colectie) {
                            return colectie
                                .toLowerCase()
                                .replaceAll(' ', '_')
                                .replaceAll('ă', 'a')
                                .replaceAll('â', 'a')
                                .replaceAll('î', 'i')
                                .replaceAll('ș', 's')
                                .replaceAll('ț', 't');
                        }
                    %>
                    <article id="elem_<%- prod.id %>" class="produs <%- normalizareNumeColectie(prod.colectie) %>">
                        <h3 class="titlu">
                            <a href="/produs/<%- prod.id %>">
                            <span class="val-titlu"><%- prod.titlu %></span></a>
                        </h3>
                        <!-- <div class="info-prod">
                            <p class="pret">Pret: <span class="val-pret"><%- prod.pret%></span></p>
                            <p class="calorii">Calorii: <span class="val-calorii"><%- prod.calorii%></span></p>
                            <p class="gramaj">Gramaj: <span class="val-gramaj"><%- prod.gramaj%></span></p>
                        </div> -->
                        <div class="info-prod">
                            <table>
                                <tr>
                                    <td>Autor</td>
                                    <td class="val-autor"><%- prod.autor %></td>
                                </tr>
                                <tr>
                                    <td>Preț</td>
                                    <td class="val-pret"><%- prod.pret %></td>
                                </tr>
                                <tr>
                                    <td>Număr pagini</td>
                                    <td class="val-pagini"><%- prod.nr_pagini %></td>
                                </tr>
                                <tr>
                                    <td>Limba</td>
                                    <td class="val-limba"><%- prod.limba %></td>
                                </tr>
                                <tr>
                                    <td>Formate</td>
                                    <td class="val-formate"><%- prod.format %></td>
                                </tr>
                                <tr>
                                    <td>Data adăugării</td>
                                    <td>
                                        <time datetime="<%- (new Date(prod.data_adaugare)).toISOString() %>"><%- formatareData(prod.data_adaugare) %></time>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Ofertă</td>
                                    <td class="val-oferta"><%- prod.oferta ? 'Da' : 'Nu' %></td>
                                </tr>
                                <tr>
                                    <td>Anul apariției</td>
                                    <td class="val-an-aparitie"><%- prod.anul_aparitiei %></td>
                                </tr>
                            </table>
                        </div>
                        <figure class="imagine-prod">
                            <a href="/produs/<%- prod.id %>">
                                <img src="/resurse/img/produse/<%- prod.imagine ? prod.imagine : "book-cover.jpg" %>" style="width:150px;height:auto;" alt="[imagine <%- prod.titlu %>]"/>
                            </a>
                        </figure>
                        <div class="descriere-prod"><%- prod.descriere %></div>
                        <p class="colectie">Colecție: <span class="val-colectie"><%- prod.colectie %></span></p>
                        <!-- <label class="selecteaza-cos">
                            Selectează:<br/>
                            <input type="checkbox" class="select-cos" value="<%- prod.id %>" autocomplete="off">
                        </label> -->
                    </article>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include("../fragmente/footer") %>
</body>
</html>
