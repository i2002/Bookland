                <script>
                    let produse = JSON.parse(`<%- carti %>`);
                    
                    function selectieAleatoare() {
                        let ids = [];
                        while(ids.length < 5) {
                            let index = Math.floor(Math.random() * produse.length);
                            if (ids.indexOf(index) == -1) {
                                ids.push(index);
                            }
                        }

                        for (let i = 0; i < 5; i++) {
                            let produs = produse[ids[i]];
                            document.querySelector(`#caruselCarti .carousel-item:nth-child(${i + 1}) img`).src = '/resurse/img/produse/' + (produs.imagine ? produs.imagine : 'book-cover.jpg');
                            document.querySelector(`#caruselCarti .carousel-item:nth-child(${i + 1}) h5`).innerText = produs.titlu;
                            document.querySelector(`#caruselCarti .carousel-item:nth-child(${i + 1}) p`).innerText = produs.autor;
                        }
                    }

                    selectieAleatoare();
                    setInterval(selectieAleatoare, 15000);
                </script>
